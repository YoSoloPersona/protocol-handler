{
    "compilerOptions": {
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": false,
        "declaration": true,
        "declarationDir": "dist/types",
        "downlevelIteration": true,
        "lib": [
          "esnext",
          "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "yo-data-processing": ["./src/index"],
            "yo-data-processing/stream": ["./src/stream/index"],
            "yo-data-processing/rxjs": ["./src/rxjs/index"]
        }
    },
    "include": ["src"],
    "typedocOptions": {
      "entryPoints": ["src/index.ts"],
      "out": "docs"
  }
}
